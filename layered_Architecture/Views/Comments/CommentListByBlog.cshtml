@model IEnumerable<layered_Architecture.Entity.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    <div class="media">
        @foreach (var item in Model)
        {


            <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.commentUserName</h5>
                <h3>@item.commentTitle</h3>
                <p>@item.commentContent</p>

                <div class="media mt-3">
                    <a class="d-flex pr-3" href="#">
                        <img src="~/web/images/t2.jpg" alt="" class="img-fluid" />
                    </a>
                    <div class="media-body">
                        <h5 class="mt-0">@item.</h5>
                        <h3>@item.commentTitle</h3>

                        <p>@item.commentContent</p>
                    </div>
                </div>

            </div>
        }
    </div>

</div>
