@model IEnumerable<layered_Architecture.Entity.Concrete.Comment>
<h1>Yorumlar</h1>

<div class="comment-top">

    @foreach (var item in Model)
    {

        <h4>Comments</h4>
        <div class="media">

            <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.commentTitle</h5>
                <h3>@item.commentUserName</h3>
                <p>@item.commentContent</p>

                <div class="media mt-3">
                    <a class="d-flex pr-3" href="#">
                        <img src="~/web/images/t2.jpg" alt="" class="img-fluid" />
                    </a>
                    <div class="media-body">
                        <h5 class="far fa-calendar-alt">@(((DateTime)item.commentDate).ToString("dd MMM yyyy"))</h5>

                    </div>
                </div>

            </div>
        </div>
    }


</div>
